<!DOCTYPE html>
<html>
  <head>
    <title>Camel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <header class="navbar navbar-fixed-top">
          <div class="logo">
            <h1>camel</h1>
          </div>
              <div id="sp-menu">
                <h2>MENU</h2>
                <nav>
                <ul>
                  <%if user_signed_in? %>
                  <li><%= link_to 'アバウト', about_path %></li>
                  <li><%= link_to '新規投稿', new_post_path %></li>
                  <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
                  <li><%= link_to '投稿一覧', posts_path %></li>
                  <li><%= link_to 'ユーザー一覧', users_path %></li>
                  <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
                  <% @genres.each do |genre| %>
                  <li>
                    <%= link_to genres_path(genre.id) do%>
                      <%= genre.name %>
                      <% end %>
                  </li>
                  <% end %>
                  <% elsif admin_signed_in? %>
                  <li><%= link_to 'logout', destroy_admin_session_path, method: :delete %></li>
                  <% else %>
                  <li><%= link_to "投稿一覧", posts_path %></li>
                  <li><%= link_to "ユーザー一覧", users_path %></li>
                  <li><%= link_to 'アバウト', about_path %></li>
                  <li><%= link_to 'sign up', new_user_registration_path %></li>
                  <li><%= link_to 'login', new_user_session_path %></li>
                  <% @genres.each do |genre| %>
                  <li>
                    <%= link_to genres_path(genre.id) do%>
                      <%= genre.name %>
                      <% end %>
                  </li>
                  <% end %>
                  <% end %>
                </ul>
                </nav>
              </div>

              <div id="hm-icon">
                <a class="menu-trigger">
                  <span></span>
                  <span></span>
                  <span></span>
                </a>
              </div>
          </div>
    </header>

      <div class="container">
        <div class="row">
          <%= yield %>
        </div>
      </div>
 </body>
</html>
