<div class="col-xs-5 all">

	<h2>Editing User</h2>

	<%= form_for(@user) do |f| %>

		<strong>image</strong>
		<div class="filed row">
			<%= f.attachment_field :profile_image %>
		</div>

		<strong>name</strong>
		<div class="field row">
			<%= f.text_field :name, :size=>"40x10", :placeholder => "2~20文字以内" %>
		</div>

		<strong>introduction</strong>
		<div class="filed row">
			<%= f.text_area :introduction, :size=>"50x3", :placeholder => "150文字以内" %>
		</div>

		<div class="actions row">
			<%= f.submit class: 'btn btn-default' %>
		</div>
	<% end %>
</div>