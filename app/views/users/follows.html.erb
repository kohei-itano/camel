<div class="col-xs-7 all">
	<h2>Follows</h2>
	<table class="table">
		<% @users.each do |user| %>
			<tr>
				<th>image</th>
				<th>name</th>
				<th>follows</th>
				<th>followers</th>
				<th></th>
				<th></th>
			</tr>
			<tr>
				<td align="center"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
				</td>
				<td align="center"><%= user.name %></td>
				<td align="center"><%= user.active_relationships.count %></td>
				<td align="center"><%= user.passive_relationships.count %></td>
				<% if current_user != user %>
					<% if user.followed_by?(current_user) %>
						<td align="center"><%= link_to "フォロー中", user_relationships_path(user),method: :delete, class: "btn btn-default btn-sm" %></td>
					<% else %>
						<td align="center"><%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-primary btn-sm" %></td>
					<% end %>
				<% end %>
				<td align="center"><%= link_to "投稿一覧", user_path(user), class: "btn btn-default btn-sm" %></td>
			</tr>
		<% end %>
	</table>
</div>