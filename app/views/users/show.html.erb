<h2>マイページ</h2>
<div class="col-xs-9">
	<h2>user posts</h2>
		<table class="table">
			<% @user.posts.each do |user| %>
			<tr>
				<th>image</th>
				<th>title</th>
				<th>text</th>
			</tr>
			<tr>
				<td>
					<%= attachment_image_tag user, :post_image, :fill, 60, 60, class: "img-circle pull-left profile-thunb" %>
				</td>
				<td><%= user.title %></td>
				<td><%= user.body %></td>
			</tr>
			<% end %>
		</table>
</div>
<div class="col-xs-3">
	<table class="table">
		<tr>
			<th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thunb" %></th>
		</tr>
		<tr>
			<th>ユーザー名</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>自己紹介</th>
			<th><%= @user.introduction %></th>
		</tr>
		<tr>
			<th>
				<%= link_to "アカウント削除", user_path(@user), method: :delete %>
			</th>
		</tr>
	</table>
	<div class="row">
		<%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
	</div>
</div>
