<h2>マイページ</h2>
<div class="col-xs-3">

</div>
<div class="col-xs-9">
	<h2>user posts</h2>
		<table class="table">
			<% @user.posts.each do |user| %>
			<tr>
				<th>image</th>
				<th>title</th>
				<th>text</th>
			</tr>
			<tr>
				<td>
					<%= attachment_image_tag user, :post_image, :fill, 60, 60, class: "img-circle pull-left profile-thunb" %>
				</td>
				<td><%= user.title %></td>
				<td><%= user.body %></td>
			</tr>
			<% end %>
		</table>
</div>

