<h2>マイページ</h2>
<div class="col-xs-9">
	<h2>user posts</h2>
		<table class="table">
			<% @user.posts.each do |user| %>
			<tr>
				<th>image</th>
				<th>title</th>
				<th>text</th>
			</tr>
			<tr>
				<td>
					<%= attachment_image_tag user, :post_image, :fill, 60, 60, class: "img-circle pull-left profile-thunb" %>
				</td>
				<td><%= user.title %></td>
				<td><%= user.body %></td>
			</tr>
			<% end %>
		</table>
</div>
<div class="col-xs-3">
	<table class="table">
		<tr>
			<th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thunb" %></th>
		</tr>
		<tr>
			<th>ユーザー名</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>自己紹介</th>
			<th><%= @user.introduction %></th>
		</tr>
		<tr>
			<th>フォロー</th>
			<th>
				<%= link_to follows_user_path(@user.id) do%>
				<%= @user.active_relationships.count %>
				<% end %>
			</th>
		</tr>
		<tr>
			<th>フォロワー</th>
			<th>
				<%= link_to followers_user_path(@user) do %>
				<%= @user.passive_relationships.count %>
				<% end %>
			</th>
		</tr>
		<tr>
			<th>
			<% if current_user != @user %>
				<% if @user.followed_by?(current_user) %>
				<%= link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %>
				<% else %>
				<%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
				<% end %>
			<% end%>
		</th>
		</tr>
		<tr>
			<th>
				<%= link_to "アカウント削除", user_path(@user), method: :delete, data: {confirm: "消していいですか？"}%>
			</th>
		</tr>
	</table>
	<div class="row">
		<%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
	</div>
</div>
