<h2>マイページ</h2>
<div class="col-xs-8">
	<% @user.posts.each do |post| %>
		<table class="table users">
			<tr>
				<th>image</th>
				<th>title</th>
				<th>text</th>
				<th>favorites</th>
				<th>comments</th>
			</tr>
			<tr>
				<td><%= attachment_image_tag post, :post_image, :fill, 60, 60 %></td>
				<th><%= post.title %></th>
				<th>
					<%= link_to post_path(post.id)  do%>
					<%= truncate(post.body, length:15) %>
					<%end%>
				</th>
				<th><%= post.favorites.count %></th>
				<th><%= post.post_comments.count %> </th>
			</tr>
			<% if current_user == @user %>
			<tr>
				<th><%= link_to "編集", edit_post_path(post.id) %></th>
				<td></td>
				<th><%= link_to "削除", post_path(post.id), method: :delete, data: {confirm: "消していいですか？"} %></th>
			</tr>
			<% end %>
		</table>
	<% end %>
</div>
<div class="col-xs-4 ">
	<table class="table userinfo">
		<tr>
			<th colspan="2"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle profile-thunb" %></th>
		</tr>
		<tr>
			<th colspan="2"><%= @user.name %></th>
		</tr>
		<tr>
			<td colspan="2" ><%= @user.introduction %></td>
		</tr>
		<tr>
			<th colspan="2">
				フォロー<%= link_to follows_user_path(@user.id) do%>
				<%= @user.active_relationships.count %>
				<% end %>
			</th>
		</tr>
		<tr>
			<th colspan="2">
				フォロワー<%= link_to followers_user_path(@user) do %>
				<%= @user.passive_relationships.count %>
				<% end %>
			</th>
		</tr>
		<% if current_user != @user %>
			<tr>
				<th colspan="2">
					<% if @user.followed_by?(current_user) %>
						<%= link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %>
					<% else %>
						<%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
					<% end %>
				</th>
			</tr>
		<% else %>
			<tr>
				<th colspan="2">
					<%= link_to "アカウント削除", user_path(@user), method: :delete, data: {confirm: "消していいですか？"}%>
				</th>
			</tr>
			<tr>
				<th colspan="2">
				<%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
				</th>
			</tr>
		<%end%>
	</table>
</div>

